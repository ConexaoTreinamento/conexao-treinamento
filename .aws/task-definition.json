{
    "family": "ecs-fargate-task-definition",
    "executionRoleArn": "arn:aws:iam::498606688387:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "backend",
            "image": "498606688-387.dkr.ecr.us-east-2.amazonaws.com/ecr/conexao-treinamento:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "name": "backend-8080-tcp",
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "SPRING_DATASOURCE_USERNAME",
                    "value": "conexao_treinamento_admin"
                },
                {
                    "name": "SPRING_DATASOURCE_PASSWORD",
                    "value": "conexao123"
                },
                {
                    "name": "SPRING_DATASOURCE_URL",
                    "value": "jdbc:postgresql://conexao-treinamento-db.chkcmo6egl56.us-east-2.rds.amazonaws.com:5432/postgres"
                },
                {
                    "name": "JWT_SECRET",
                    "value": "e8bRm2OHzVk4BigsiUPTHMOcTXdyCjBWhbADy7+ks/OnZdNwXLPnyOzcbkdsT+wk"
                },
                {
                    "name": "JWT_EXPIRATION_HOURS",
                    "value": "24"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/ecs-fargate-task-definition",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}